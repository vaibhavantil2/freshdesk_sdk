{
  "globals": {
    "Buffer": true,
    "escape": true
  },
  "rules": {
    // "quotes": [1, "single"], // Can vist strict quotes convention later.
    "brace-style": [2, "stroustrup", { "allowSingleLine": true }],
    "block-scoped-var": 2,
    "strict": 0,
    "curly": 1,
    "no-empty": 0,
    "no-underscore-dangle": 0,
    "new-cap": 0,
    "dot-notation": 0,
    "no-use-before-define": 0,
    "space-after-keywords": [2, "always"],
    "space-before-blocks": [2, "always"],
    "no-trailing-spaces": 2,
    "space-unary-ops": 0,
    "no-mixed-spaces-and-tabs": 2,
    "no-unused-vars": [1],
    "eqeqeq": [2, "smart"],
    "camelcase": 1,
    "comma-spacing": [2, { "before": false, "after": true }]
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
}
